        link(href='vendor/magnific-popup/magnific-popup.css', rel='stylesheet')
        // Theme CSS - Includes Bootstrap
        link(href='css/creative.min.css', rel='stylesheet')
    body#page-top
        // Navigation
        nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-01
            .container
                a.navbar-brand.js-scroll-trigger(href='#page-top') Talking Libro
                button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarResponsive.collapse.navbar-collapse
                    l.navbar-nav.ml-auto.my-2.my-lg-0
                        li.nav-item
                            a.nav-link.js-scroll-trigger(href='/login-page') Login
        // Masthead
        header.masthead
            .container.h-100
                .row.h-100.align-items-center.justify-content-center.text-center
                    .col-lg-10.align-self-end
                        h1.text-uppercase.text-white.font-weight-bold Taking Libro Audio Book
                        hr.divider.my-4
                    .col-lg-8.align-self-baseline
                        p.text-white-75.font-weight-light.mb-5 Definitely should signup. It&apos;s an amazing product.
                        // <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">Find Out More</a>
                        form(action='/signup', method='post')
                            input.mb-3.form-control(required='', type='email', name='email', placeholder='Your email')
                            input.mb-3.form-control(required='', type='password', name='password', placeholder='Enter a password')
                            input.btn.btn-primary.btn-xl(type='submit', value='Get 30 days free')
        // Footer
        footer.bg-light.py-1
            .container
                .small.text-center.text-muted Copyright &copy; Talking Libro 2022
